{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "newLine": "lf",
    "jsx": "react",
    "lib": ["es2020.string", "es2020", "dom", "dom.iterable"],
    "paths": {
      "~/*": ["src/*"],
      "~comp/*": ["src/components/*"],
      "~lib/*": ["src/lib/*"],
      "*": ["node_modules/@types/*", "types/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": ["src", "src/index.test.ts"],
  "exclude": ["tests", "./src/**/*.test.ts"]
}
